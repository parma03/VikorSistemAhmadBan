<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardSubKriteria"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Klasifikasi -->
            <TextView
                android:id="@+id/tvKlasifikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sangat Baik"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Bobot -->
            <TextView
                android:id="@+id/tvBobot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Bobot: 50"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="8dp">

            <!-- Edit Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipEdit"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Edit"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/primary_blue"
                app:chipCornerRadius="16dp"
                app:chipIcon="@android:drawable/ic_menu_edit"
                app:chipIconTint="@color/white"
                app:chipIconSize="14dp"
                app:chipMinHeight="32dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:textStartPadding="4dp"
                app:textEndPadding="4dp"
                android:layout_marginEnd="4dp" />

            <!-- Delete Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipDelete"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Hapus"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/error_red"
                app:chipCornerRadius="16dp"
                app:chipIcon="@android:drawable/ic_menu_delete"
                app:chipIconTint="@color/white"
                app:chipIconSize="14dp"
                app:chipMinHeight="32dp"
                app:chipStartPadding="8dp"
                app:chipEndPadding="8dp"
                app:textStartPadding="4dp"
                app:textEndPadding="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>