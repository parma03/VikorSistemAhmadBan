<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Klasifikasi Selection -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klasifikasi"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <Spinner
            android:id="@+id/spinnerKlasifikasi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:textColor="@color/textColor" />

    </LinearLayout>

    <!-- Bobot Display -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bobot Otomatis"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tvBobotSubKriteria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:text="Bobot: 50"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:drawableStart="@android:drawable/ic_menu_info_details"
            android:drawablePadding="8dp"
            android:drawableTint="@color/text_secondary" />

    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Bobot akan otomatis disesuaikan berdasarkan klasifikasi yang dipilih"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>