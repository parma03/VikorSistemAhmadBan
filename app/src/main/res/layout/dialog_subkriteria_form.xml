<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Klasifikasi Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Klasifikasi"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etKlasifikasi"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Masukkan klasifikasi..."
            android:textColor="@color/textColor"
            android:textColorHint="@color/text_hint"
            android:background="@drawable/edittext_background"
            android:inputType="text"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Bobot Input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bobot (Maksimal 100)"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etBobotSubKriteria"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="12dp"
            android:hint="Masukkan bobot (1-100)..."
            android:textColor="@color/textColor"
            android:textColorHint="@color/text_hint"
            android:background="@drawable/edittext_background"
            android:inputType="number"
            android:maxLines="1" />

    </LinearLayout>

    <!-- Info Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Klasifikasi dan bobot dapat disesuaikan sesuai kebutuhan\n* Bobot harus berupa angka antara 1-100"
        android:textColor="@color/text_hint"
        android:textSize="12sp"
        android:textStyle="italic"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>