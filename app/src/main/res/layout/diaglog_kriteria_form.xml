<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Form Fields -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nama Kriteria Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Nama Kriteria"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:startIconDrawable="@android:drawable/ic_menu_edit"
                app:startIconTint="@color/text_secondary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNamaKriteria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:maxLength="255"
                    android:textColor="@color/textColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Bobot Kriteria Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Bobot Kriteria"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusTopStart="8dp"
                app:startIconDrawable="@android:drawable/ic_menu_sort_by_size"
                app:startIconTint="@color/text_secondary"
                app:suffixText="%" >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBobotKriteria"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:maxLength="5"
                    android:textColor="@color/textColor" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Info Text -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="* Semua field wajib diisi dengan benar"
                android:textColor="@color/text_hint"
                android:textSize="12sp"
                android:textStyle="italic"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
